<%- include('head') %> <!-- vista que me abre todo el cascarón -->
<!-- CSS Propio-->
<link rel="stylesheet" href="/stylesheets/editFormRestaurant/editFormRestaurant.css">
<title>Formulario edición restaurante</title>
<%- include('navbar') %> 

  <main class="container-fluid">
    <section class="section1 row justify-content-center">
        <div class="cuadro d-flex flex-column align-items-center gap-4">
          <img src="/images/assets/logo-user.png" alt="logo user">
          <form 
            class="d-flex flex-column gap-4"
            action="/restaurant/editRestaurant/<%= result[0].restaurant_id %>" 
            method="post" 
            enctype="multipart/form-data">
            <input 
              type="text"
              name="restaurant_name"
              placeholder="nombre del restaurante"
              value="<%= result[0].restaurant_name %>"
            >
            <input 
              type="text"
              name="cook_style"
              placeholder="estilo de cocina"
              value="<%= result[0].cook_style %>"
            >
            <textarea 
              name="restaurant_description"
              placeholder="descripción del restaurante"
              rows="5"  
              cols="50"
            ><%= result[0].restaurant_description %></textarea>
            <div>
              <input 
                class="number me-2" 
                type="text"
                name="phone_number"
                placeholder="número de teléfono"
                value="<%= result[0].phone_number %>"
              >
              <label class="text-center" for="file">Subir</label>
              <input 
                id="file"
                type="file"
                name="img"
                hidden
              >
            </div>
            <h5><%= typeof message != 'undefined'? message : null %></h5>
            <div class="d-flex justify-content-between">
              <button class="btn btn-primary">Aceptar</button>
              <a href="/restaurant/twoRestaurant/<%= result[0].restaurant_id %>"><button class="btn btn-primary" type="button">Cancelar</button></a>
              <button class="btn btn-primary" type="reset">Limpiar</button>
            </div>
          </form>
        </div>
    </section>
  </main>

<%- include('footer') %>